
open_project ${PROJECT_NAME}_prj

open_solution "solution1"
set_part ${FPGA_PART}
create_clock -period ${USER_CLOCK_PERIOD} -name default

set_top ${PROJECT_NAME}

add_files  ${CMAKE_CURRENT_SOURCE_DIR}/accumulate.cpp -cflags "-std=c++11 -I${CMAKE_CURRENT_BINARY_DIR}"
add_files  ${CMAKE_CURRENT_SOURCE_DIR}/aggr_bucket.cpp -cflags "-std=c++11 -I${CMAKE_CURRENT_BINARY_DIR}"
add_files  ${CMAKE_CURRENT_SOURCE_DIR}/divide_data.cpp -cflags "-std=c++11 -I${CMAKE_CURRENT_BINARY_DIR}"
add_files  ${CMAKE_CURRENT_SOURCE_DIR}/hyperloglog.cpp -cflags "-std=c++11 -I${CMAKE_CURRENT_BINARY_DIR}"
add_files  ${CMAKE_CURRENT_SOURCE_DIR}/write_results_memory.cpp -cflags "-std=c++11 -I${CMAKE_CURRENT_BINARY_DIR}"
add_files  ${CMAKE_CURRENT_SOURCE_DIR}/zero_counter.cpp -cflags "-std=c++11 -I${CMAKE_CURRENT_BINARY_DIR}"
add_files  ${CMAKE_CURRENT_SOURCE_DIR}/murmur3.cpp -cflags "-std=c++11 -I${CMAKE_CURRENT_BINARY_DIR}"

add_files -tb ${CMAKE_CURRENT_SOURCE_DIR}/hll_test_bench.cpp


config_rtl -disable_start_propagation

#Check which command
set command [lindex $argv 2]

if {$command == "synthesis"} {
   csynth_design
} elseif {$command == "csim"} {
   csim_design
} elseif {$command == "ip"} {
   export_design -format ip_catalog -display_name "HLL" -description "" -vendor "ethz.systems.fpga" -version "0.1"
} elseif {$command == "installip"} {
   file mkdir ${IPREPO_DIR}
   file delete -force ${IPREPO_DIR}/${PROJECT_NAME}
   file copy -force ${CMAKE_CURRENT_BINARY_DIR}/${PROJECT_NAME}_prj/solution1/impl/ip ${IPREPO_DIR}/${PROJECT_NAME}/
} else {
   puts "No valid command specified. Use vivado_hls -f make.tcl <synthesis|csim|ip|installip> ."
}


exit
